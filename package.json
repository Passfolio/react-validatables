{
  "name": "react-validatables",
  "version": "1.3.2",
  "description": "Validation tools for React built on react-waitables",
  "keywords": [
    "bindings",
    "observable",
    "react",
    "react-native",
    "typescript",
    "client",
    "forms",
    "input",
    "validation"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/Passfolio/react-validatables.git",
  "homepage": "https://passfolio.github.io/react-validatables/",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:dev": "trash dev-build && yarn build && mkdir dev-build && cp -r lib dev-build && cp package.json dev-build && (cd dev-build && echo 'package' `pwd`)",
    "clean": "trash coverage dev-build docs lib",
    "generate:docs": "npx typedoc src/index.ts",
    "lint": "eslint 'src/**/*.ts?(x)' --max-warnings 0",
    "prepublishOnly": "yarn clean && yarn test && yarn lint && yarn test:audit && yarn clean && yarn build && yarn generate:docs",
    "test": "yarn test:check-circular-dependencies && yarn test:unit-tests",
    "test:audit": "yarn audit --level moderate; [[ $? -ge 4 ]] && exit 1 || exit 0",
    "test:check-circular-dependencies": "yarn build && npx madge --circular ./lib",
    "test:unit-tests:": "npx jest --runInBand --coverage",
    "test:unit-tests": "yarn test:unit-tests: src"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "dependencies": {
    "client-run-queue": "^2.0.1",
    "heap": "^0.2.7",
    "react-bindings": "^1.9.0",
    "react-waitables": "^1.6.2"
  },
  "devDependencies": {
    "@jest/types": "^29.4.1",
    "@testing-library/react": "^13.4.0",
    "@types/heap": "^0.2.31",
    "@types/jest": "^29.4.0",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "i18next": "^22.4.9",
    "jest": "29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "madge": "6.0.0",
    "prettier": "2.8.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "trash-cli": "5.0.0",
    "ts-jest": "^29.0.5",
    "typedoc": "^0.23.24",
    "typescript": "4.9.5"
  }
}
